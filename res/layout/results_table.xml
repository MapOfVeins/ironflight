<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/top_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/day_col"
            android:padding="8dip"
            android:text="Day"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/vol_col"
            android:padding="8dip"
            android:text="Volume"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/dif_col"
            android:padding="8dip"
            android:text="Difficulty"
            android:textSize="18sp" >
        </TextView>
    </TableRow>

    <TableRow
        android:layout_width="1dp"
        android:background="#000000" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_span="2" >
        </View>
    </TableRow>

    <TableRow
        android:id="@+id/monday_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/mon_day_col"
            android:padding="8dip"
            android:text="Monday"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/mon_vol_col"
            android:padding="8dip"
            android:textSize="17sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/mon_dif_col"
            android:padding="8dip"
            android:textSize="17sp"
            android:textStyle="bold" >
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/tuesday_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tue_day_col"
            android:padding="8dip"
            android:text="Tuesday"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/tue_vol_col"
            android:padding="8dip"
            android:textSize="17sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/tue_dif_col"
            android:padding="8dip"
            android:textSize="17sp"
            android:textStyle="bold" >
        </TextView>
    </TableRow>

    <TableRow
