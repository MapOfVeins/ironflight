        <TextView
            android:id="@+id/wed_vol_col"
            android:padding="8dip"
            android:textSize="17sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/wed_dif_col"
            android:padding="8dip"
            android:textSize="17sp"
            android:textStyle="bold" >
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/thursday_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/thu_day_col"
            android:padding="8dip"
            android:text="Thursday"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/thu_vol_col"
            android:padding="8dip"
            android:textSize="17sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/thu_dif_col"
            android:padding="8dip"
            android:textSize="17sp"
            android:textStyle="bold" >
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/friday_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/fri_day_col"
            android:padding="8dip"
            android:text="Friday"
            android:textSize="18sp" >
        </TextView>

        <TextView
