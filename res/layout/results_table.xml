        <TextView
            android:id="@+id/ovr_dif_col"
            android:padding="8dip"
            android:textSize="17sp"
            android:textStyle="bold" >
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/need_more_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_need_more"
            android:layout_span="3"
            android:padding="8dip"
            android:text="You may need more:"
            android:textSize="16sp" >
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/need_more_list_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/need_more_results"
            android:layout_span="4"
            android:padding="6dip"
            android:textSize="14sp" >
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/need_less_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_need_less"
            android:layout_span="3"
